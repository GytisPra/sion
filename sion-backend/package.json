{
  "name": "sion-backend",
  "version": "0.0.1",
  "description": "",
  "author": "sion-team",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": "21.7.1",
    "yarn": "1.22.21"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --maxWorkers=1",
    "test:watch": "jest --watch --maxWorkers=1",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm:cli": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -f src/database/typeorm-migrations.config.ts",
    "migration:generate": "yarn typeorm:cli -- migration:generate -d src/migrations -n",
    "migration:create": "yarn typeorm:cli -- migration:create -d src/migrations -n",
    "migration:run": "yarn typeorm:cli -- migration:run",
    "migration:revert": "yarn typeorm:cli -- migration:revert"
  },
  "dependencies": {
    "@nestjs/bull": "^0.4.0",
    "@nestjs/common": "^8.3.1",
    "@nestjs/config": "^1.2.0",
    "@nestjs/core": "^8.3.1",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^8.3.1",
    "@nestjs/swagger": "^5.2.0",
    "@nestjs/typeorm": "^8.0.3",
    "@sendgrid/mail": "^7.6.1",
    "aws-sdk": "^2.922.0",
    "bcrypt": "^5.0.1",
    "bull": "^4.6.2",
    "bullmq": "^1.39.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cookie-parser": "^1.4.5",
    "googleapis": "^95.0.0",
    "handlebars": "^4.7.7",
    "jest": "^28.1.0",
    "joi": "^17.1.1",
    "lodash": "^4.17.21",
    "nodemailer": "^6.6.1",
    "passport": "^0.4.1",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.4",
    "sion-logger": "git+ssh://git@bitbucket.org:sion-project/sion-logger.git",
    "swagger-ui-express": "^4.1.6",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typeorm": "^0.2.32",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@faker-js/faker": "^7.2.0",
    "@nestjs/schematics": "^8.0.11",
    "@nestjs/testing": "^8.4.6",
    "@types/bcrypt": "^5.0.0",
    "@types/bull": "^3.15.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/express-request-id": "^1.4.1",
    "@types/jest": "^26.0.22",
    "@types/lodash": "^4.14.170",
    "@types/multer": "^1.4.5",
    "@types/node": "^14.14.36",
    "@types/passport-jwt": "^3.0.5",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.2",
    "supertest": "^6.1.3",
    "ts-jest": "^28.0.4",
    "ts-loader": "^8.0.18",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
